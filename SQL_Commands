# use this to instantiate user_info table
CREATE TABLE user_info
  (name VARCHAR(30) NOT NULL,
   zipcode integer NOT NULL,
   allergies VARCHAR(30),
   weekly_budget integer,
   PRIMARY KEY (name, zipcode)
  );

# use this to instantiate recipes table
CREATE TABLE recipes
  (url VARCHAR(100) NOT NULL,
   recipe_name VARCHAR(15),
   ingredient VARCHAR(20),
   cuisine VARCHAR(20),
   PRIMARY KEY (url)
  );

# use this syntax to add an additional column to the table 
ALTER TABLE table_name
ADD column_name datatype;
